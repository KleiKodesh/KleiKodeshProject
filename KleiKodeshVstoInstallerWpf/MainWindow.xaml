<Window x:Class="KleiKodeshVstoInstallerWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KleiKodeshVstoInstallerWpf"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        FlowDirection="RightToLeft"
        SizeToContent="WidthAndHeight"
        FontFamily="Segoe UI"
        FontSize="16"
        Title="התקנת כלי קודש"
        PreviewKeyDown="Window_PreviewKeyDown"
        MouseDown="Window_MouseDown"
        TouchDown="Window_TouchDown">
    <Grid>

        <Image Source="/KleiKodesh_Main.ico"
               Opacity="0.05"
               Height="400"
               Width="450"
               Margin="-40"
               Stretch="Fill"/>

        <Grid Margin="35,16"
              Opacity="0.8">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="16"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="16"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <StackPanel x:Name="HeaderPanel"
                        HorizontalAlignment="Center">
                <TextBlock VerticalAlignment="Center"
                           Text="כלי קודש לוורד"
                           FontSize="26"
                           FontWeight="SemiBold"/>

                <TextBlock VerticalAlignment="Center"
                           Text="ארגז כלים לעורך התורני"
                           FontWeight="SemiBold"
                           Opacity="0.9"/>
            </StackPanel>

            <Grid x:Name="OptionsGrid"
                  Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="35"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid.Resources>
                    <Style TargetType="GroupBox">
                        <Setter Property="Padding" Value="10"/>
                    </Style>
                    <Style TargetType="CheckBox">
                        <Setter Property="Margin" Value="4"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="Cursor" Value="Hand"/>
                    </Style>
                    <Style TargetType="RadioButton">
                        <Setter Property="Margin" Value="4"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="Cursor" Value="Hand"/>
                    </Style>
                </Grid.Resources>

                <GroupBox Padding="10">
                    <GroupBox.Header>
                        <TextBlock Text="רכיבים זמינים"
                                   FontWeight="SemiBold"/>
                    </GroupBox.Header>
                    <StackPanel x:Name="VisibleSettingsPanel">
                        <CheckBox x:Name="Kezayit_Visible"  Content="כזית"/>
                        <!--<CheckBox x:Name="HebrewBooks_Visible"  Content="היברו בוקס"/>-->
                        <CheckBox x:Name="WebSites_Visible"  Content="דרך האתרים"/>
                        <CheckBox x:Name="KleiKodesh_Visible"  Content="עיצוב תורני"/>
                        <CheckBox x:Name="RegexFind_Visible"  Content="חיפוש רגקס בוורד"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Grid.Column="2"
                          Padding="10">
                    <GroupBox.Header>
                        <TextBlock Text="לחצן ראשי"
                                   FontWeight="SemiBold"/>
                    </GroupBox.Header>
                    <StackPanel x:Name="OptionsSettingsPanel">
                        <RadioButton x:Name="Kezayit_Option" Content="כזית"/>
                        <!--<RadioButton x:Name="HebrewBooks_Option" Content="היברו בוקס"/>-->
                        <RadioButton x:Name="WebSites_Option" Content="דרך האתרים"/>
                        <RadioButton x:Name="KleiKodesh_Option" Content="עיצוב תורני"/>
                        <RadioButton x:Name="RegexFind_Option" Content="חיפוש רגקס בוורד"/>
                        <RadioButton x:Name="Settings_Option" Content="הגדרות"/>
                    </StackPanel>
                </GroupBox>


            </Grid>

            <StackPanel x:Name="ButtonsPanel"
                        Grid.Row="4"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Margin" Value="5,0,0,0"/>
                        <Setter Property="Padding" Value="20,2"/>
                        <Setter Property="Cursor" Value="Hand"/>
                    </Style>
                </StackPanel.Resources>
                <Button x:Name="CancelButton"
                        Content="ביטול"
                        Background="Transparent"
                        BorderThickness="0.5"
                        Click="CancelButton_Click"/>
                <Button x:Name="InstallButton"
                        Content="התקן"
                        Background="#FF7333FF"
                        Foreground="White"
                        BorderThickness="0"
                        Click="InstallButton_Click"/>
            </StackPanel>
        </Grid>

        <TextBlock x:Name="EmailTextBlock"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Left"
                   FontSize="10"
                   Padding="10">
            <Hyperlink NavigateUri="mailto:kleikodeshproject@gmail.com"
                       RequestNavigate="Hyperlink_RequestNavigate">
                kleikodeshproject@gmail.com
            </Hyperlink>
        </TextBlock>
    </Grid>
</Window>
